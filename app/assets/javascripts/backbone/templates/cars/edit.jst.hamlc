%h1 Edit Car

%form#edit-car{:name => "car"}
  .field
    %label{:for => "make"} Make:
    %input{:type => "text", :name => "make", :id => "make", :value => @make }
  .field
    %label{:for => "model"} Model:
    %input{:type => "text", :name => "model", :id => "model", :value => @model }

  .actions
    %input{:type => "submit", :value => "Update Car"}

%a{:href => "#/index"} Back